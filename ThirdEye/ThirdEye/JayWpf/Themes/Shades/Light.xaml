<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Background Color: Lights Gray's-->
    <SolidColorBrush x:Key="LightBackground" Color="#FFF6F6F6" />
    <SolidColorBrush x:Key="MidLtBackground" Color="#FFBCBECB" />
    <SolidColorBrush x:Key="MidHvBackground" Color="#FFDFDFE2" />
    <SolidColorBrush x:Key="HeavyBackground" Color="#FFFEFEFE" />

    <!--Foreground Color: Blacks's-->
    <SolidColorBrush x:Key="LightForeground" Color="#FF666666" />
    <SolidColorBrush x:Key="HeavyForeground" Color="#FF000000" />

    <!--Active Color: Dark Mid Gray-->
    <SolidColorBrush x:Key="ActiveBackColor" Color="#FF444444" />
    <SolidColorBrush x:Key="ActiveForeColor" Color="#FF444444" />
    
</ResourceDictionary>