<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Background Color: Dark Gray's-->
    <SolidColorBrush x:Key="LightBackground" Color="#FF252526" />
    <SolidColorBrush x:Key="MidLtBackground" Color="#FF3F3F46" />
    <SolidColorBrush x:Key="MidHvBackground" Color="#FF2D2D30" />
    <SolidColorBrush x:Key="HeavyBackground" Color="#FF1E1E1E" />

    <!--Foreground Color: White's-->
    <SolidColorBrush x:Key="LightForeground" Color="#FF999999" />
    <SolidColorBrush x:Key="HeavyForeground" Color="#FFFFFFFF" />

    <!--Active Color: Light Mid Gray-->
    <SolidColorBrush x:Key="ActiveBackColor" Color="#FFBBBBBB" />
    <SolidColorBrush x:Key="ActiveForeColor" Color="#FFBBBBBB" />

</ResourceDictionary>